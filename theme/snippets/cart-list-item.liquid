<div class="CartListItem">
  <div class="CartListItem__data CartListItem__cell">
    <div class="CartListItem__card">
      <div class="CartListItem__image">
        <img class="CartListItem__image--img" src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}" />
      </div>
      <div class="CartListItem__details">
        <div class="CartListItem__details--top">
          <h4>Spring Step Cunacena Sandal</h4>
          <div class="CartListItem__details--options">
            Black / Small
          </div>
        </div>
        <div class="CartListItem__details--bottom">
          <button class="btn btn-with-icon btn-secondary-hollow hidden lg:flex">
            Remove
          </button>
          <div class="QtySelector lg:hidden">- 1 +</div>
        </div>
      </div>
    </div>
  </div>
  <div class="CartListItem__price CartListItem__cell">
    <button class="btn btn-icon btn-rounded btn-secondary lg:hidden">
      t
    </button>
    <span class="Price__cart-item">{{ item.price | money }}</span>
  </div>
  <div class="CartListItem__quantity CartListItem__cell">
    - 1 +
  </div>
  <div class="CartListItem__total CartListItem__cell">
    {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
    {{ item.line_price | money }}
    {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
  </div>
</div>